              },
              {
                "name": "options",
                "type": "group",
                "label": "Advanced options",
                "importance": "low",
                "fields": [
                  {
                    "name": "caseSensitive",
                    "type": "boolean",
                    "label": "Case sensitive",
                    "default": true,
                    "description": "Makes sure the user input has to be exactly the same as the answer."
                  },
                  {
                    "name": "forgiveMistakes",
                    "type": "boolean",
                    "label": "Forgive minor mistakes",
                    "description": "Will also accept solutions with minor spelling mistakes (3-9 characters: 1 mistake, more than 9 characters: 2 mistakes). Can also be handy for plural forms, etc."
                  }
                ]
              }
            ]
          }
        },
        {
          "name": "options",
          "type": "group",
          "label": "Advanced options",
          "importance": "low",
          "fields": [
            {
              "name": "points",
              "type": "number",
              "label": "Points",
              "default": 1,
              "description": "Points awarded if one of this group's keywords is used in the text.",
              "min": 1
            },
            {
              "name": "feedbackFound",
              "type": "text",
              "label": "Feedback if found",
              "description": "Will be displayed to the user if this keyword group was found in the text.",
              "optional": true
            },
            {
              "name": "feedbackMissed",
              "type": "text",
              "label": "Feedback if missing",
              "description": "Will be displayed to the user if this keyword group is missing in the text.",
              "optional": true
            }
          ]
        }
      ]
    }
  },
  {
    "name": "overallFeedback",
    "type": "group",
    "label": "Overall Feedback",
    "importance": "low",
    "expanded": true,
    "fields": [
      {
        "name": "overallFeedback",
        "type": "list",
        "widgets": [
          {
            "name": "RangeList",
            "label": "Default"
          }
        ],
        "importance": "high",
        "label": "Define custom feedback for any score range",
        "description": "Click the \"Add range\" button to add as many ranges as you need. Example: 0-20% Bad score, 21-91% Average Score, 91-100% Great Score!",
